<% 
layout('/s2/layout'); 
%>
    <!-- Breadcrumbs -->
    <section class="breadcrumbs g-bg-gray-light-v5 g-py-50">
        <div class="container">
            <div class="d-sm-flex text-center">
                <div class="align-self-center">
                    <h1 class="h3 g-font-weight-300 w-100 g-mb-10 g-mb-0--md">경기정보</h1>
                </div>

                <div class="align-self-center ml-auto">
                    <ul class="u-list-inline">
                        <li class="list-inline-item g-mr-5">
                            <a class="u-link-v5 g-color-main g-color-primary--hover" href="/s2/">홈</a>
                            <i class="g-color-gray-light-v2 g-ml-5">/</i>
                        </li>
                        <li class="list-inline-item g-color-primary">
                            <span>경기정보</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- End Breadcrumbs -->

    <!-- Section Content -->
    <section id="donators" class="g-py-100">
        <div class="container">
            <div class="text-uppercase text-center u-heading-v2-4--bottom g-brd-primary g-mb-60">
                <h4 class="g-font-weight-700 g-font-size-12 g-color-primary g-mb-15">SPEX S02</h4>
                <h2 class="u-heading-v2__title g-line-height-1_1 g-font-weight-700 g-font-size-40 g-color-black g-mb-minus-10">경기정보</h2>
            </div>
        </div>

        <div class="container g-my-20">
            <div class="spex-tour d-inline-block g-rounded-7 g-brd-around g-brd-gray-light-v3 g-brd-primary--hover g-color-gray-dark-v5 g-color-white--hover g-bg-primary--hover g-color-gray-light-v1 g-px-12 g-py-5 g-mr-5">
                <i class="fa fa-question mr-2"></i>
                <span class="g-font-size-12 g-font-weight-700">도움말</span>
            </div>

            <div class="spex-level-3 d-inline-block g-rounded-7 g-brd-around g-brd-gray-light-v3 g-brd-primary--hover g-color-gray-dark-v5 g-color-white--hover g-bg-primary--hover g-color-gray-light-v1 g-px-12 g-py-5">
                <a id="game_create_button">
                    <i class="fa fa-gear mr-2"></i>
                    <span class="g-font-size-12 g-font-weight-700">경기생성</span>
                </a>
            </div>
        </div>

        <!-- Products -->
        <div class="container">
            <div class="row align-items-center g-pt-10 g-pb-10">
                <!-- Filters -->
                <div class="col-12 g-pt-10">
                    <!-- Brand -->
                    <div class="g-mb-30">
                        <h3 class="h5 mb-3">팀필터</h3>

                        <ul class="list-inline mb-0" data-step="1" data-intro="경기를 팀별로 필터링하여 볼수있습니다.">
                            <li class="list-inline-item mr-2">
                                <label class="form-check-inline u-check d-block u-link-v5 g-color-gray-dark-v4 g-color-primary--hover g-pl-30">
                                    <input class="hidden-xs-up g-pos-abs g-top-0 g-left-0" type="checkbox" name="filter_team_all" checked>
                                    <div class="u-check-icon-checkbox-v4 g-absolute-centered--y g-left-0">
                                        <i class="fa" data-check-icon="&#xf00c"></i>
                                    </div>
                                    모두선택
                                    <!-- <span class="float-right g-font-size-13">0</span> -->
                                </label>
                            </li>

                            <% team_info.forEach(function(t,i){%>
                                <li class="list-inline-item mr-2">
                                    <label class="form-check-inline u-check d-block u-link-v5 g-color-gray-dark-v4 g-color-primary--hover g-pl-30">
                                        <input class="hidden-xs-up g-pos-abs g-top-0 g-left-0" type="checkbox" name="filter_team" value="<%= spex.Team.get_sync(t.teamid).info.name %>">
                                        <div class="u-check-icon-checkbox-v4 g-absolute-centered--y g-left-0">
                                            <i class="fa" data-check-icon="&#xf00c"></i>
                                        </div>
                                        <%= t.info.name %>
                                            <!-- <span class="float-right g-font-size-13">0</span> -->
                                    </label>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                    <!-- End Brand -->

                    <hr>
                </div>
                <!-- End Filters -->
            </div>
            <div class="row">
                <!-- Content -->
                <div class="col-12 flex-md-unordered">
                    <div class="g-pl-15--lg">
                        <!-- Filters -->
                        <div class="d-flex justify-content-end align-items-center g-pt-40 g-pb-20">
                            <!-- Show -->
                            <div class="g-mr-60">
                                <h2 class="h6 align-middle d-inline-block g-font-weight-400 text-uppercase g-pos-rel g-top-1 mb-0">Show:</h2>

                                <!-- Secondary Button -->
                                <div class="d-inline-block btn-group">
                                    <button type="button" class="btn btn-secondary dropdown-toggle h6 align-middle g-brd-none g-color-gray-dark-v5 g-color-black--hover g-bg-transparent text-uppercase g-font-weight-300 g-font-size-12 g-pa-0 g-pl-10 g-ma-0"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        9
                                    </button>
                                    <div class="dropdown-menu rounded-0">
                                        <a class="dropdown-item g-color-gray-dark-v4 g-font-weight-300" href="#">All</a>
                                        <a class="dropdown-item g-color-gray-dark-v4 g-font-weight-300" href="#">5</a>
                                        <a class="dropdown-item g-color-gray-dark-v4 g-font-weight-300" href="#">15</a>
                                        <a class="dropdown-item g-color-gray-dark-v4 g-font-weight-300" href="#">20</a>
                                        <a class="dropdown-item g-color-gray-dark-v4 g-font-weight-300" href="#">25</a>
                                    </div>
                                </div>
                                <!-- End Secondary Button -->
                            </div>
                            <!-- End Show -->

                            <!-- Sort By -->
                            <div class="g-mr-60">
                                <h2 class="h6 align-middle d-inline-block g-font-weight-400 text-uppercase g-pos-rel g-top-1 mb-0">Sort by:</h2>

                                <!-- Secondary Button -->
                                <div class="d-inline-block btn-group">
                                    <button type="button" class="btn btn-secondary dropdown-toggle h6 align-middle g-brd-none g-color-gray-dark-v5 g-color-black--hover g-bg-transparent text-uppercase g-font-weight-300 g-font-size-12 g-pa-0 g-pl-10 g-ma-0"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Bestseller
                                    </button>
                                    <div class="dropdown-menu rounded-0">
                                        <a class="dropdown-item g-color-gray-dark-v4 g-font-weight-300" href="#">Bestseller</a>
                                        <a class="dropdown-item g-color-gray-dark-v4 g-font-weight-300" href="#">Trending</a>
                                        <a class="dropdown-item g-color-gray-dark-v4 g-font-weight-300" href="#">Price low to high</a>
                                        <a class="dropdown-item g-color-gray-dark-v4 g-font-weight-300" href="#">price high to low</a>
                                    </div>
                                </div>
                                <!-- End Secondary Button -->
                            </div>
                            <!-- End Sort By -->

                            <!-- Sort By -->
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item">
                                    <a class="u-icon-v2 u-icon-size--xs g-brd-primary g-color-primary" href="page-list-filter1.html">
                                        <i class="icon-list"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="u-icon-v2 u-icon-size--xs g-brd-gray-light-v3 g-brd-black--hover g-color-gray-dark-v5 g-color-black--hover" href="page-grid-filter1.html">
                                        <i class="icon-grid"></i>
                                    </a>
                                </li>
                            </ul>
                            <!-- End Sort By -->
                        </div>
                        <!-- End Filters -->
                        <div class="row">
                            <div class="col-12">
                                <table id='filterable-table'>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>

                    </div>

                </div>
                <!-- End Content -->


            </div>
            <!-- End Products -->
    </section>


    <!-- Modal -->

    <section class="modal fade" id="createGameModal" role="dialog">
        <form method="POST" name="gameForm">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">경기생성</h4>
                    </div>
                    <div class="modal-body">

                        <div class="row  g-mb-10">
                            <div class="col-md-6">
                                <div class="form-group g-font-secondary g-color-black g-mb-20 g-mb-0--md">
                                    <label class="text-uppercase g-font-weight-700 g-font-size-11 g-mb-10">경기일시</label>
                                    <div class="input-group g-brd-primary--focus g-brd-around g-brd-gray-dark-v5 ">
                                        <input class="js-datepicker form-control u-form-control u-datepicker-v1 g-font-size-15 g-placeholder-inherit g-brd-none rounded-0 pr-0"
                                            type="text" placeholder="YYYY/MM/DD" name="date" required>

                                        <div class="input-group-addon rounded-0 d-flex align-items-center g-color-gray-light-v3 g-placeholder-inherit g-brd-none">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group g-font-secondary g-color-black g-mb-20 g-mb-0--md">
                                    <label class="text-uppercase g-font-weight-700 g-font-size-11 g-mb-10">경기시간</label>
                                    <div class="input-group clockpicker g-brd-primary--focus g-brd-around g-brd-gray-dark-v5" data-autoclose="true">
                                        <input class="form-control u-form-control u-datepicker-v1 g-font-size-15 g-placeholder-inherit g-brd-none rounded-0 pr-0"
                                            type="text" placeholder="22:00" name="time" required>

                                        <div class="input-group-addon rounded-0 d-flex align-items-center g-color-gray-light-v3 g-placeholder-inherit g-brd-none">
                                            <i class="fa fa-clock-o"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <p class="text-uppercase g-font-weight-700 g-font-size-11 g-color-black">대전팀</p>
                            </div>
                        </div>

                        <div class="row">
                            <% team_info.forEach(function(tInfo) { %>
                                <div class="col-4 col-md-3 g-pb-15 g-pa-15--sm clickable" data-value="<%=tInfo.teamid%>">
                                    <div class="g-parent g-pos-rel g-brd-around g-theme-brd-gray-light-v4 g-overflow-hidden">
                                        <img class="clickable-image img-fluid g-grayscale-100x g-height-95 image-fit-cover g-transition-0_2 g-transition--ease-in"
                                            src="/img/league/<%=tInfo.teamid%>.png" alt="Image description">
                                    </div>
                                </div>
                                <%});%>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">생성</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </form>
    </section>


    <script>
        window.onload = function () {

            $('head').append(' <script src = \'/s2/assets/js/helpers/team.selector.js\'> <\/script>');
            $('head').append(' <script src = \'/s2/js/view/games.js\'> <\/script>');

            toggleStylesheet('/s2/assets/vendor/intro/introjs.css', 1);
            $('head').append(' <script src = \'/s2/assets/vendor/intro/intro.js\'> <\/script>');

            $('.spex-tour').on('click', function (e) {

                var tour = introJs()
                tour.setOption('tooltipPosition', 'auto');
                tour.setOption('positionPrecedence', ['left', 'right', 'bottom', 'top'])
                tour.start()
            });

            $(document).ready(function () {
                $('.js-datepicker').datepicker("setDate", new Date());
            });
        }
    </script>

    <% include ./games_non_expired_handlebars_template.ejs %>
        <% include ./games_expired_handlebars_template.ejs %>