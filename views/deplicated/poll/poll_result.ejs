<% layout('../layout') %>
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2><strong>설문조사</strong></h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/users">홈</a>
                </li>
                <li> <strong>설문조사</strong></li>
                <li class="active"> <strong>설문조사결과</strong></li>
            </ol>
        </div>
        <div class="col-lg-2"></div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>통계</h5>
                        <div class="ibox-tools">
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div id="vote-bar-chart" style="height:300px"></div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>설문조사결과</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li><a href="#">Config option 1</a>
                                </li>
                                <li><a href="#">Config option 2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th></th>
                                    <th>Battle Tag</th>
                                    <th>참석여부</th>
                                </tr>
                            </thead>
                            <% for(var i = 0; i < data.length;i++ ) { %>
                                <tbody>
                                    <tr>
                                        <td><%=i+1%></td>
                                        <td class="client-avatar"><img src=<%=data[i].avatar%> ></td>
                                        <td><%=data[i].id%></td>
                                        <td class="client-status">
                                            <% if( data[i].poll == 1) { %>
                                            <span class="label label-primary">참석</span>
                                            <% } else if( data[i].poll == 2) { %>
                                            <span class="label label-warning">불참</span>
                                            <% } else if( data[i].poll == 0) {%>
                                            <span class="label label-danger">미수집</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                </tbody>
                                <% } %>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>


    <script>
        window.onload=function() {
            $('head').append('<script src=\'/js/app/app.poll_result.js\'><\/script>');
        }
    </script>
    
